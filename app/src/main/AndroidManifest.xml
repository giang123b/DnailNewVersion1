<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dnail3">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dnail">

        <activity android:name=".PromotionDetailsActivity"></activity>
        <activity android:name=".PromotionActivity" />
        <activity android:name=".TransactionDetailsActivity" />
        <activity android:name=".TransactionHistoryActivity" />
        <activity android:name=".EditProfileActivity" />
        <activity android:name=".PersonalInformationActivity" />
        <activity android:name=".PhoneScreenActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".OtpActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".IntroduceActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
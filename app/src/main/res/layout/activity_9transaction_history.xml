<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/layout_transactionHistory"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pink_theme"
                android:padding="@dimen/padding_8dp"
                >
                <ImageView
                    android:id="@+id/image_transactionHistory_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_lich_su_giao_dich"
                    android:textSize="30sp"
                    android:gravity="center"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="@color/not_pink"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="120.000 đ"
                    android:textSize="25sp"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    >
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="#0040FF"
                        android:paddingLeft="@dimen/padding_4dp"
                        android:paddingRight="@dimen/padding_4dp"
                        android:text="Đang chờ"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:gravity="center"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linear_transactionHistory_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="105 Quang Trung, Hà Đông"
                android:drawableLeft="@drawable/ic_add_location_black_24dp"
                android:textColor="@color/black"
                android:gravity="center|left"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="10:30 Ngày 23/10/2019"
                android:drawableLeft="@drawable/ic_alarm_add_black_24dp"
                android:textColorHint="@color/black"
                android:gravity="center|left"
                />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="@color/not_pink"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="120.000 đ"
                    android:textSize="25sp"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    >
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="#D32F2F"
                        android:paddingLeft="@dimen/padding_4dp"
                        android:paddingRight="@dimen/padding_4dp"
                        android:text="Đã hủy"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:gravity="center"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linear_transactionHistory_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="105 Quang Trung, Hà Đông"
                android:drawableLeft="@drawable/ic_add_location_black_24dp"
                android:textColor="@color/black"
                android:gravity="center|left"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="9:30 Ngày 23/9/2019"
                android:drawableLeft="@drawable/ic_alarm_add_black_24dp"
                android:textColor="@color/black"
                android:gravity="center|left"
                />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="@color/not_pink"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="120.000 đ"
                    android:textSize="25sp"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    >
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="#388E3C"
                        android:paddingLeft="@dimen/padding_4dp"
                        android:paddingRight="@dimen/padding_4dp"
                        android:text="Hoàn thành"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:gravity="center"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linear_transactionHistory_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="105 Quang Trung, Hà Đông"
                android:drawableLeft="@drawable/ic_add_location_black_24dp"
                android:textColor="@color/black"
                android:gravity="center|left"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="8:30 Ngày 01/08/2019"
                android:drawableLeft="@drawable/ic_alarm_add_black_24dp"
                android:textColor="@color/black"
                android:gravity="center|left"
                />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="@color/not_pink"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="120.000 đ"
                    android:textSize="25sp"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    >
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="#388E3C"
                        android:paddingLeft="@dimen/padding_4dp"
                        android:paddingRight="@dimen/padding_4dp"
                        android:text="Hoàn thành"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:gravity="center"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linear_transactionHistory_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="105 Quang Trung, Hà Đông"
                android:drawableLeft="@drawable/ic_add_location_black_24dp"
                android:textColor="@color/black"
                android:gravity="center|left"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="20:30 Ngày 23/6/2019"
                android:drawableLeft="@drawable/ic_alarm_add_black_24dp"
                android:textColor="@color/black"
                android:gravity="center|left"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>